{
    "compilerOptions": {
        "outDir": "wwwroot",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "watch": true
    },
    "compileOnSave": true
}